<%= form_with model: post, url: posts_path, remote: true do |form| %>
  <p>
    <%= form.text_area :title%>
  </p>

  <p>
    <%= form.text_area :content%>
  </p>

  <div class="row">
    <div class="col-sm-11">
      <p>
        <%= form.submit class: "btn btn-primary"%>
      </p>
    </div>
  </div>
<% end %>