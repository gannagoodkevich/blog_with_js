<div id="target-for-change">
  <div class="card mb-3">
    <div class="card-body">
       <div class="card-body">
         <p class="card-text"><%= post.title%></p>
         <p class="card-text"><%= post.content%></p>
        </div>
    </div>
    <div id="post-<%=post.id%>-comments">
      <%= link_to "Show comments", post_comments_path(post_id: post.id), remote: true %>
    </div>
    <div id="create-comment-<%=post.id %>">
      <%= link_to "Create comment", new_post_comment_path(post_id: post.id), remote: true %>
    </div>
  </div>
</div>